{block content}

<h1>LazyDataMapperDemo</h1>

<p>
	Product name: {$product->name} (price: {$product->price} €)
</p>

<table>
	<thead>
		<tr>
			<th>&nbsp;</th><th>Name</th><th>Price</th>
		</tr>
	</thead>
	<tbody>
		<tr n:foreach="$products as $i => $product">
			<td>{$i+1}.</td><td>{$product->name}</td><td>{$product->price} €</td>
		</tr>
	</tbody>
</table>

<h2>Product 13</h2>
{control modifyProduct13}

<h2>Create new TV</h2>
{control createTV}
